.summary {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 380rpx;
  color: #3eb575;
}

.summary .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: 40rpx 0 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.summary .user {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.summary .doc {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.menu {
  background: #ffffff;
  padding: 0 20rpx;
  margin: 20rpx 0;
  height: 700rpx;
}

.menu .menuItem {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
}

.menu image {
  padding-right: 30rpx;
  padding-left: 20rpx;
}

.menu .shareFriend {
  display: flex;
  flex-direction: row;
}

.menu .shareFriend button::after {
  border: none;
}

.menu .shareFriend button {
  background-color: #ffffff;
  display: inline-block;
  line-height: 2.3;
  font-size: 16px;
  padding: 0 0;
  align-items: flex-start;
}
