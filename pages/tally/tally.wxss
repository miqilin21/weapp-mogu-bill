  left: 0;
  width: 100%;
  background-size: cover;
  position: fixed;
  z-index: 999;
  background-color: #ebf4f4;
  height: 170rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: #3eb575;
  box-sizing: border-box;
}

.date {
  flex: 1;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 33%;
}

.income {
  flex: 1;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 33%;
  overflow: hidden;
}

.outcome {
  flex: 1;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  width: 33%;
  overflow: hidden;
}

.date-year {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  line-height: 35rpx;
  margin-bottom: 15rpx;
}

.date-month {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.income-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
