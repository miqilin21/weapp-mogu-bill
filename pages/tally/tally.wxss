}

.outcome-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  line-height: 35rpx;
  margin-bottom: 15rpx;
}

.outcome-num {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.icon-font-xiala {
  font-family: "iconfont";
  font-weight: normal;
  font-style: normal;
  font-size: 24rpx;
}

.two {
  top: 180rpx;
  position: absolute;
  width: 100%;
  overflow: hidden;
}

.tallymain {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx 0 20rpx;
}

.tallymain-date {
  display: flex;
  align-items: cneter;
  justify-content: flex-start;
  font-size: 24rpx;
  color: black;
  min-width: 180rpx;
  flex-shrink: 0;
}

.tallymain-num {
  flex: auto;
  font-size: 24rpx;
  color: black;
  display: flex;
  align-items: cneter;
  justify-content: flex-end;
}

.iconfont1 {
  font-family: "iconfont";
  font-weight: normal;
  font-style: normal;
  background-color: #ebebeb;
  font-size: 50rpx;
  line-height: 70rpx;
}

.toadd {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #8491c3;
  padding: 0;
  background-size: cover;
  position: fixed;
  right: 75rpx;
  bottom: 100rpx;
  border-radius: 50%;
  z-index: 999;
  text-align: center;
}

.touch-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  height: 120rpx;
  margin-right: 0;
  transition: all 0.4s;
  transform: translateX(160rpx);
  margin-left: -160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.detail {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 28rpx;
  overflow: hidden;
}

.sortindex {
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
}

.sortindex-icon {
  width: 80rpx;
  height: 80rpx;
  flex: 1;
  display: inline-block;
  border-radius: 80rpx;
  text-align: center;
}

.remark {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 10rpx;
  display: inline-block;
  text-align: start;
}

.num {
  max-width: 30%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 80rpx;
  text-align: end;
  flex-shrink: 0;
}

.del {
  background-color: orangered;
  width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  transform: translateX(160rpx);
  transition: all 0.4s;
}

.touch-move-active .content,
.touch-move-active .del {
  transform: translateX(0);
}

.none {
  left: 23%;
  bottom: 55%;
  z-index: 999;
  position: fixed;
  font-size: 33rpx;
  color: #ccc;
}

.addtally {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #3eb575;
  padding: 0;
  background-size: cover;
  position: fixed;
  right: 75rpx;
  bottom: 100rpx;
  border-radius: 50%;
  z-index: 999;
  text-align: center;
  font-size: 35rpx;
  color: #ccc;
  text-shadow: -2rpx -2rpx 0 #fff, 2rpx 2rpx 0 #333, 2rpx 2rpx 0 #444;
}

